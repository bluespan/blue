<h1>
	Edit Global Verbiage
</h1>
<p>Note changes are published immediately on update.</p>

<% form_for @verbiage, :url => "/admin/global_verbiage/#{@verbiage.id}", :method => :put do |f| %>

<%= f.text_area :content, :class => 'wymeditor' %>

<div class="buttons">
<input type="submit" value="Update" class="button submit wymupdate" /> | <a href="#cancel" class="close">Cancel</a>
</div>

<% end %>