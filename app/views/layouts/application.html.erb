<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <title>My Site<%= page_title %></title>
	<% unless @page.nil? %>
	<meta name="description" content="<%= @page.meta_description %>" />
	<meta name="keywords" content="<%= @page.meta_keywords %>" />
	<% end %>
	<!-- <link rel="icon" type="image/png" href="/images/icon.png" /> -->
	<meta http-equiv="Content-Type" content="text/html; charset=iso-latin-1" />
	<!-- <link rel="shortcut icon" href="/favicon.ico" /> -->
	
    <%= stylesheet_link_tag('blue/reset', :media => "all") %>
    <%= stylesheet_link_tag('site', :media => "all") %>
    <%= stylesheet_link_tag('blue/admin/blue_dialog', :media => "all") if logged_in? %>
    <%= stylesheet_link_tag('blue/admin/content', :media => "all") if logged_in? %>
    <%= stylesheet_link_tag('blue/admin/jquery.jgrowl.css', :media => "screen") if logged_in? %>
    <%= stylesheet_link_tag('blue/admin/shared', :media => "all") if logged_in? %>
	<%= yield :stylesheets %>

	<%= javascript_include_tag "blue/jquery/jquery-1.3.2.min.js" %>
	<%= javascript_include_tag "blue/jquery/jquery.simplemodal-1.1.1.js"  if logged_in? %>
	<%= javascript_include_tag "blue/jquery/jquery.mousewheel.js"  if logged_in? %>
	<%= javascript_include_tag "blue/wymeditor/jquery.wymeditor.js" if logged_in? %>
	<%= javascript_include_tag "blue/wymeditor/plugins/blue/jquery.wymeditor.blue.image_dialog.js" if logged_in? %>
	<%= javascript_include_tag "blue/wymeditor/plugins/blue/jquery.wymeditor.blue.link_dialog.js" if logged_in? %>
	<%= javascript_include_tag "blue/jquery/jquery.easing.min.js" if logged_in? %>
	<%= javascript_include_tag "blue/jquery/jquery.lavalamp.min.js" if logged_in?  %>
	<%= javascript_include_tag "blue/jquery/jquery.hoverIntent.js" if logged_in? %>
	<%= javascript_include_tag 'blue/jquery/jquery.jgrowl' if logged_in? %>
	<%= javascript_include_tag 'blue/jquery/jquery.checkbox.min' if logged_in? %>
	<%= javascript_include_tag 'blue/jquery/jquery.checkboxes.pack' if logged_in? %>
	
	<%= javascript_include_tag('blue/admin/verbiage') if logged_in? %>

	<%= javascript_include_tag('application') %>
	<%= javascript_include_tag "blue/logged_in.js" if logged_in? %>
	
	<!--[if IE]>
	    <%= stylesheet_link_tag('ie', :media => "all") %>
	<![endif]-->
	
	<% if logged_in? %>
	<script type="text/javascript" charset="utf-8">
		var form_authenticity_token = "<%= form_authenticity_token %>";
	</script>
	<% end %>
	
</head>
<body <%= body_attributes %>>

	<%= render :partial => 'admin/blue_toolbar' if logged_in? %>


	<%= yield %>

</body>
</html>
